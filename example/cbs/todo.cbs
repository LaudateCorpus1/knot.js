body{
    dataContext:/dataModel
}

#todoList{
    foreach:todoList;
}

#todoList>li input{
    checked:isDone[@set:@/updateRemaining]
}
#todoList>li span{
    className:isDone>{return value?"done-true":"";};
    innerText:title
}
#listBriefMsg{
    innerText:
        (remaining & todoList.length)>{
            return value[0] +" of " + value[1] + " remaining";
        }
}